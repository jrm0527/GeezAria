@page
@model Geez_Aria.Pages.PizzaModel
@{
}

<div class="text-center">
	<div class="mainText">
		<h1 class="text-capitalize display-4 text-black">Our Great Selection of Pizza</h1>
		<h4>Choose one or try our Customizable Pizza! Then order and PROFIT!</h4>
		<h4>No need to give your personal information</h4>
		<h4>Thanks to Google, we already know you</h4>
		<p class="smallText"><i>Only one pizza per order</i></p>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-12 mb-5 mt-5">
				<div class="w-100 row makeYourOwnDiv">
					<div class="col-4">
						<img src="~/images/Pizzas/Create.png" class="w-100" />
					</div>
					<div class="col-8 align-items-center">
						<div class="align-middle makeYourownText">
							<h3 style="text-align: left;">Create Your Own Pizza</h3>
							<p style="text-align: left;">Make Your Own Pizza with our Pizza AI Maker</p>
							<a class="btn btn-primary" style="float: left;" asp-area="" asp-page="Forms/CustomPizza">Try Now!</a>
						</div>
					</div>
				</div>
			</div>

			@foreach (var pizza in Model.fakePizzaDB)
			{
				var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");

				<div class="col-4 mb-5">
					<a class="pizza-img" asp-area="" asp-page="Checkout/Checkout" asp-route-PizzaName="@pizza.PizzaName" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice">
						<img src="@imagePath" class="w-100" asp-append-version="true">						
					</a>
					<br>
				</div>
			}
		</div>
	</div>
</div>